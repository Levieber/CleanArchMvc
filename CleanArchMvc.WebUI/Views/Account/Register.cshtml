@model CleanArchMvc.WebUI.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register User";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Register" method="post">
    <div>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Email" class="col-md-2 form-label"></label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="col-md-2 form-label"></label>
            <div class="col-md-10">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="col-md-2 form-label"></label>
            <div class="col-md-10">
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <div class="col-md-10">
                <input type="submit" value="Register" class="btn btn-success" />
            </div>
        </div>

        <p>
            <a asp-action="Login">Log in</a>
        </p>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}